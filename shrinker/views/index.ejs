<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Url Shrinker</title>
</head>

<body>
    <div class="container my-4">

    <h1>Url Shrinker</h1>
    <form action="/shortUrls" method="post" class="my-2 mb-4 form-inline">
        <label class="sr-only visually-hidden-focusable" for="fullUrl">Url: </label>
        <input required placeholder="url" type="url" name="fullUrl" id="fullUrl" class="form-control mr-2 col my-4">
        <button type="submit" class="col btn btn-success">Shrink</button>
    </form>

    <table class="table table-striped table-responsive">
        <thead>
            <th>
                Full Url
            </th>
            <th>
                Short Url
            </th>
            <th>
                Clicks
            </th>
        </thead>
        <tbody>
            <% shortUrls.forEach(shortUrls => { %>
                <tr>
                    <td><a href="<%= shortUrls.full %>"><%= shortUrls.full %></a></td>
                    <td><a href="<%= shortUrls.short %>"><%= shortUrls.short %></a></td>
                    <td><%= shortUrls.clicks %></td>    
                </tr >
            <% }); %>
            
        </tbody>
    </table>

</div>


    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
</body>

</html>